<div class="sm:p-5 p-3 mt-8 border shadow-lg shadow-indigo-100 border-indigo-100 rounded-lg bg-indigo-50">
      
    <div class="mb-2 flex justify-between items-baseline">
        <span class="text-2xl font-bold text-indigo-400"><%= habit.name %></span>
    </div>

    <div class="flex flex-wrap">
        <% dates.each do |date| %>
            <% if habit.habit_completions.where(date: date).exists? %>
                <div 
                data-habit-actions-habit-id="<%= habit.id %>"
                data-habit-actions-date="<%= date %>"
                data-action="long-press->habit-actions#toggle_completion"
                class="has-tooltip h-8 w-8 mt-1 rounded shadow-md shadow-indigo-200 border border-indigo-400 bg-indigo-200">
                    <span class="tooltip"><%= date %></span>
                </div>
            <% elsif date == Date.today %>
                <div 
                data-habit-actions-habit-id="<%= habit.id %>"
                data-habit-actions-date="<%= date %>"
                data-action="long-press->habit-actions#toggle_completion"
                class="has-tooltip h-8 w-8 mt-2 rounded shadow-inner shadow-orange-300 border border-orange-200 bg-white">
                    <span class="tooltip"><%= date %></span>
                </div>
            <% else %>
                <div 
                data-habit-actions-habit-id="<%= habit.id %>"
                data-habit-actions-date="<%= date %>"
                data-action="long-press->habit-actions#toggle_completion"
                class="has-tooltip h-8 w-8 mt-2 rounded bg-indigo-50 border border-indigo-100 shadow-inner shadow-indigo-200">
                    <span class="tooltip"><%= date %></span>
                </div>
            <% end %>
        <% end %>
    </div>

</div>