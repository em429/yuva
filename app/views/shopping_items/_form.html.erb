<%= form_with(model: shopping_item, class: "contents") do |form| %>
  <% if shopping_item.errors.any? %>
    <div id="error_explanation" class="flash_danger">
      <h2><%= pluralize(shopping_item.errors.count, "error") %> prohibited this shopping_item from being saved:</h2>

      <ul>
        <% shopping_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: "block shadow rounded-md border border-stone-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :stock, "Do we have it at home now?" %>
    <%= form.check_box :stock, class: "block shadow rounded-md border border-stone-200 outline-none px-3 py-2 mt-2" %>
  </div>

  <div class="my-5">
    <%= form.label :shopping_category_id %>
    <%= form.text_field :shopping_category_id, class: "block shadow rounded-md border border-stone-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :notes %>
    <%= form.text_area :notes, rows: 4, class: "block shadow rounded-md border border-stone-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="flex">
    <%= button_tag class: "btn-primary" do %>
      <%= render partial: "svgs/check_circle", locals: { classes: "" } %>
    <% end %>
    <%= link_to @shopping_item, class: "ml-2 btn-secondary" do %>
      <%= render partial: "svgs/arrow_left_circle", locals: { classes: "" } %>
    <% end %>
  </div>

<% end %>