<div class="mx-auto w-full flex">
  <div class="w-full">

    <% if notice.present? %>
      <div class="flash_notice" id="notice">
        <%= notice %>
      </div>
    <% end %>

    <%= render @shopping_item %>

    <div class="">
      <hr class="mb-2">
      <%= link_to "Back", dashboard_path, class: "btn-secondary" %>
      <%= link_to "Edit", edit_shopping_item_path(@shopping_item), class: "ml-2 btn-secondary" %>
      <div class="inline-block ml-2">
        <%= button_to "Delete", shopping_item_path(@shopping_item), method: :delete, data: { turbo_confirm: "Are you sure?" },
        class: "btn-secondary bg-red-100" %>
      </div>
    </div>


  </div>

</div>
