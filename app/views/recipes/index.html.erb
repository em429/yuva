<div class="w-full">
  <% if notice.present? %>
    <div class="flash_notice" id="notice">
      <%= notice %>
      </div>
  <% end %>

  <%= link_to new_recipe_path, class: "flex mt-4 mb-8 px-3 justify-between btn-primary rounded-xl font-medium" do %>
    New Recipe
    <%= render partial: "svgs/plus_circle", locals: { classes: "" } %>
  <% end %>

  <div id="recipes" class="min-w-full">
    <%= render @recipes %>
  </div>
</div>
