<div id="<%= dom_id recipe %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= recipe.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= recipe.description %>
  </p>

<p class="my-5">
  <strong class="block font-medium mb-1">Recipe Items:</strong>
  <ul class="list-disc pl-5">
    <% recipe.recipe_items.each do |item| %>
      <li><%= item.shopping_item.title %></li>
    <% end %>
  </ul>
</p>
  

  <% if action_name != "show" %>
    <%= link_to "Show this recipe", recipe, class: "btn-secondary inline-block " %>
    <%= link_to "Edit this recipe", edit_recipe_path(recipe), class: "btn-secondary inline-block" %>
    <hr class="mt-6">
  <% end %>
</div>
