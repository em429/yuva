<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing recipe</h1>

  <%= render "form", recipe: @recipe %>

  <div class="mt-4">
    <div class="inline-block">
      <%= button_to "Delete", recipe_path(@recipe), method: :delete, data: { turbo_confirm: "Are you sure?" },
      class: "btn-secondary bg-red-100" %>
    </div>
    <%= link_to "Back", recipes_path, class: "ml-2 btn-secondary" %>
  </div>

</div>
