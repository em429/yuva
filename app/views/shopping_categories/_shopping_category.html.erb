<div id="<%= dom_id shopping_category %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= shopping_category.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Color:</strong>
    <%= shopping_category.color %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Notes:</strong>
    <%= shopping_category.notes %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Importance:</strong>
    <%= shopping_category.importance %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show", shopping_category, class: "btn-secondary inline-block" %>
    <%= link_to "Edit", edit_shopping_category_path(shopping_category), class: "btn-secondary inline-block" %>
    <hr class="mt-6">
  <% end %>
</div>
